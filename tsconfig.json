{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "ES2020",
        "module": "ES2020",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "skipLibCheck": true,
        "strict": false,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "tabby.link"
    ],
    "angularCompilerOptions": {
        "enableIvy": true,
        "compilationMode": "partial"
    }
}
