ul.nav-tabs(ngbNav, #nav='ngbNav')
    li(ngbNavItem)
        a(ngbNavLink, translate) General
        ng-template(ngbNavContent)
            .mb-3
                label(translate) WebSocket URL
                input.form-control(
                    type='text',
                    placeholder='wss://your.domain.com/k8sexec?namespace=xxx&pod=xxx...',
                    [(ngModel)]='profile.options.wsUrl',
                )
                small.form-text.text-muted(translate)
                    | Enter the full WebSocket URL including authentication parameters

div([ngbNavOutlet]='nav')
